<!-- Health & Safety -->
<div class="section-container">
  <div class="section-title">
    <h1>Health & Safety</h1>
    <svg width="26px" height="14px">
      <use xlink:href="#caret-down"></use>
    </svg>
  </div>
  <section>
    <svg width="100%" height="75px">
      <use xlink:href="#slope-border"></use>
    </svg>
    <div class="section-content">
      <svg width="27px" height="29px">
        <use xlink:href="#icn-zap"></use>
      </svg>
      <h2>Emergency Services</h2>
      <table>
        <tbody>
          <% destination.emergency_numbers.each do |department, number| %>
            <tr>
              <td><%= department %></td>
              <td><%= number %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <h2>Drinkable Water</h2>
      <% if destination.drinkable_water %>
        <p>You can safely drink the tap water</p>
      <% else %>
        <p>Don't drink the tap water</p>
      <% end %>
    </div>
  </section>
</div>
