<!-- Communication -->
<div class="section-container">
  <div class="section-title">
    <h1>Communication</h1>
    <svg width="26px" height="14px">
      <use xlink:href="#caret-down"></use>
    </svg>
  </div>
  <section>
    <svg width="100%" height="75px">
      <use xlink:href="#slope-border"></use>
    </svg>
    <div class="section-content">
      <svg width="27px" height="29px">
        <use xlink:href="#icn-zap"></use>
      </svg>
      <h2>Languages</h2>
      <p><%= destination.languages.join(', ') %></p>
      <svg width="27px" height="29px">
        <use xlink:href="#icn-zap"></use>
      </svg>
      <h2>Key Phrases</h2>
      <table>
        <tbody>
          <% destination.key_phrases.each do |meaning, phrase| %>
            <tr>
              <td><%= meaning %></td>
              <td><%= phrase %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <h2>Pizza</h2>
      <table>
        <tbody>
          <% (destination.pizza || []).each do |meaning, phrase| %>
            <tr>
              <td><%= meaning %></td>
              <td><%= phrase %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </section>
</div>
