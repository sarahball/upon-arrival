<!-- Tech -->

<% if destination.sim.present? %>
  <div class="card--container tech">
    <div class="card--info">
      <div class="card--tag">
        <h3>Tech</h3>
      </div>
      <h1>Prepaid SIM</h1>
      <h2><%= destination.sim_highlight %></h2>
    </div>
    <div class="card--details">
      <%= destination.sim_intro if destination.sim_intro.present? %>
      <table>
        <% destination.sim.each do |field, value| %>
          <tr>
            <td><%= field %></td>
            <td><%= value %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
<% end %>