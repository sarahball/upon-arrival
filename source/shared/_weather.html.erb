<!-- Weather -->
<div class="item-container">
  <div class="item-title">
    <h1>Weather</h1>
    <svg width="26px" height="14px">
      <use xlink:href="#caret-down"></use>
    </svg>
  </div>
  <section>
    <svg width="100%" height="75px">
      <use xlink:href="#slope-border"></use>
    </svg>
    <div class="item-content">
      <svg width="27px" height="29px">
        <use xlink:href="#icn-zap"></use>
      </svg>
      <h2>Typical Weather</h2>
      <p><%= weather_typical(destination) %></p>
      <svg width="27px" height="29px">
        <use xlink:href="#icn-zap"></use>
      </svg>
      <h2>Weather Upon Arrival</h2>
      <div>
        <svg width="27px" height="27px">
          <use xlink:href="#icn-<%= weather_today_icon(destination) %>"></use>
        </svg>
        <div><%= weather_today_summary(destination) %></div>
      </div>
      <table>
        <tbody>
          <tr>
            <td>
              <svg width="13px" height="27px">
                <use xlink:href="#icn-therm-full"></use>
              </svg>
            </td>
            <td>
              <svg width="13px" height="27px">
                <use xlink:href="#icn-therm-empty"></use>
              </svg>
            </td>
          </tr>
          <tr>
            <td>high <%= weather_temperature_high(destination) %>°c</td>
            <td>low <%= weather_temperature_low(destination) %>°c</td>
          </tr>
        </tbody>
      </table>
    </div>
  </section>
</div>
