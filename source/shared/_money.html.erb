<!-- Money -->
<div class="section-container">
  <div class="section-title">
    <h1>Money</h1>
    <svg width="26px" height="14px">
      <use xlink:href="#caret-down"></use>
    </svg>
  </div>
  <section>
    <svg width="100%" height="75px">
      <use xlink:href="#slope-border"></use>
    </svg>
    <div class="section-content">
      <svg width="27px" height="29px">
        <use xlink:href="#icn-zap"></use>
      </svg>
      <h2>Currency</h2>
      <p><%= destination.currency.name %> (<%= destination.currency.code %>)</p>
      <svg width="27px" height="29px">
        <use xlink:href="#icn-zap"></use>
      </svg>
      <h2>Exchange Rate</h2>
      <p>
        <%= exchange_rate_between(departure, destination) %> | <%= exchange_rate_between(destination, departure) %>
      </p>
      <svg width="27px" height="29px">
            <use xlink:href="#icn-zap"></use>
          </svg>
      <h2>Is the rate favorable?</h2>
      <% if exchange_rate_between_favorable?(departure, destination) %>
        <p>Yes. <%= departure.currency.name %> have typically been stronger in the past three months.</p>
      <% else %>
        <p>No. <%= destination.currency.name %> have typically been stronger in the past three months.</p>
      <% end %>
    </div>
  </section>
</div>
