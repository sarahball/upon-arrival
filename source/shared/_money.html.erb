<!-- Money -->
<div>
  <h1 class="blocks-header">Money</h1>
  <svg class="caret-down" width="26px" height="14px">
    <use xlink:href="#caret-down"></use>
  </svg>
</div>
<section>
  <svg width="100%" height="75px">
    <use xlink:href="#slope-border"></use>
  </svg>
  <div class="blocks-content">
    <svg width="27px" height="29px">
      <use xlink:href="#icn-zap"></use>
    </svg>
    <h2 class="blocks-title">Currency</h2>
    <p><%= to.currency.name %> (<%= to.currency.code %>)</p>
    <svg width="27px" height="29px">
          <use xlink:href="#icn-zap"></use>
        </svg>
    <h2>Exchange Rate</h2>
    <p>£1.00 = $1.29 | $1.00 = £0.77</p>
    <svg width="27px" height="29px">
          <use xlink:href="#icn-zap"></use>
        </svg>
    <h2 class="blocks-title">Is the rate favorable?</h2>
    <p>No. The US dollar has typically been stronger in the past month.</p>
  </div>
</section>