self.addEventListener('install', function(e){
  e.waitUntil(
    caches.open('upon-arrival').then(function(cache){
      return cache.addAll([
        '/',
        '<%= asset_path(:css, 'site') %>',
        '<%= asset_path(:js, 'site') %>',
        <% data.destinations.each do |destination_code, destination_data| %>
          '<%= asset_path(:images, "bg-#{destination_data.slug}.jpg") %>',
        <% end %>

        <% data.departures.each do |departure_code, departure_data| %>
          <% data.destinations.each do |destination_code, destination_data| %>
            '<%= "/#{destination_data.slug}-from-#{departure_code.downcase}" %>',
          <% end %>
        <% end %>
      ])
        .then(function(){ self.skipWaiting() });
    })
  )
});

self.addEventListener('activate',  function(event){
  event.waitUntil(self.clients.claim());
});

self.addEventListener('fetch', function(event){
  event.respondWith(
    caches.match(event.request, {ignoreSearch:true}).then(function(response){
      return response || fetch(event.request);
    })
  );
});
