<div class="card--container <%= card.type %>">
  <div class="card--info">
    <div class="card--tag">
      <span><h3><%= card.category %></h3></span>
    </div>
    <h1><%= card.title %></h1>
    <% if card.highlight? %>
      <h2><%= card.highlight %></h2>
    <% end %>
  </div>
  <% if card.body? %>
    <div class="card--details">
      <%= card.body %>
    </div>
  <% end %>
  <% if current_user %>
    <button data-type="dialog" data-target="#dialog-card-<%= card.id %>">Edit</button>
  <% end %>
  <% if card.last_edit_by? %>
    <%= link_to "https://www.twitter.com/#{card.last_edit_by.username}", targer: '_blank' do %>
      <%= image_tag(card.last_edit_by.profile_image_url) %>
    <% end %>
  <% end %>
</div>

<% if current_user %>
  <div class="dialog" id="dialog-card-<%= card.id %>" title="Update Card">
    <%= render 'cards/form', card: card %>
  </div>
<% end %>
