<h1><%= resource.name %></h1>

<% if resource == current_user %>
  <p><%= link_to "Update Profile", edit_profile_path %></p>
<% end %>

<% [:description, :location, :website_url, :profile_image_url].each do |field| %>
  <h2><%= User.human_attribute_name(field) %></h2>
  <div>
    <%= resource.send(field) %>
  </div>
<% end %>
